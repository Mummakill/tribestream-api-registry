div
  .expected
    h2 Expected values
      div(x-ng-click="addExpectedValue();").tribe-add-btn
        i.fa.fa-plus
    table(x-ng-if="endpoint.operation['x-tribestream-api-registry']['expected-values'].length")
      thead
        tr
          th Attribute
          th Data Type
          th Expected Values
          th Description
          th
      tbody
        tr(x-ng-repeat="val in endpoint.operation['x-tribestream-api-registry']['expected-values']")
          td
            div(data-tribe-text,
              data-on-edit-mode-on="onEditModeOn(uniqueId)",
              data-on-edit-mode-off="onEditModeOff(uniqueId)",
              data-value="val.name")
          td
            div(data-tribe-text,
              data-on-edit-mode-on="onEditModeOn(uniqueId)",
              data-on-edit-mode-off="onEditModeOff(uniqueId)",
              data-value="val.type")
          td
            div(data-tribe-markdown,
              data-on-edit-mode-on="onEditModeOn(uniqueId)",
              data-on-edit-mode-off="onEditModeOff(uniqueId)",
              data-value="val.values")
          td
            div(data-tribe-markdown,
              data-on-edit-mode-on="onEditModeOn(uniqueId)",
              data-on-edit-mode-off="onEditModeOff(uniqueId)",
              data-value="val.description")
          td
            div(x-ng-click="removeExpectedValue(val);")
              i.fa.fa-trash-o
  .values
    h2 Response codes
      div(x-ng-click="addErrorCode();", app-endpoints-details-toc-anchor="Response codes").tribe-add-btn
        i.fa.fa-plus
    table(x-ng-if="endpoint.operation['x-tribestream-api-registry'] && endpoint.operation['x-tribestream-api-registry']['response-codes'] && endpoint.operation['x-tribestream-api-registry']['response-codes'].length")
      thead
        tr
          th HTTP Status
          th Error Code
          th Message
          th Description
          th
      tbody
        tr(x-ng-repeat="val in endpoint.operation['x-tribestream-api-registry']['response-codes'] | orderBy:'http_status'")
          td
            div(data-tribe-text,
              data-on-edit-mode-on="onEditModeOn(uniqueId)",
              data-on-edit-mode-off="onEditModeOff(uniqueId)",
              data-value="val.http_status")
          td
            div(data-tribe-text,
              data-on-edit-mode-on="onEditModeOn(uniqueId)",
              data-on-edit-mode-off="onEditModeOff(uniqueId)",
              data-value="val.error_code")
          td
            div(data-tribe-text,
              data-on-edit-mode-on="onEditModeOn(uniqueId)",
              data-on-edit-mode-off="onEditModeOff(uniqueId)",
              data-value="val.message")
          td
            div(data-tribe-markdown,
              data-on-edit-mode-on="onEditModeOn(uniqueId)",
              data-on-edit-mode-off="onEditModeOff(uniqueId)",
              data-value="val.description")
          td
            div(x-ng-click="removeErrorCode(val);")
              i.fa.fa-trash-o
  .resp-body
    h2 Response Body
    div(data-tribe-markdown,
      data-on-edit-mode-on="onEditModeOn(uniqueId)",
      data-on-edit-mode-off="onEditModeOff(uniqueId)",
      data-value="endpoint.operation['x-tribestream-api-registry']['response-body']")
  .samples
    h2 Samples
    h3 Request Headers
    div(data-tribe-markdown,
      data-on-edit-mode-on="onEditModeOn(uniqueId)",
      data-on-edit-mode-off="onEditModeOff(uniqueId)",
      data-value="endpoint.operation['x-tribestream-api-registry']['request-parameters']")
    h3 Response Parameters
    div(data-tribe-markdown,
      data-on-edit-mode-on="onEditModeOn(uniqueId)",
      data-on-edit-mode-off="onEditModeOff(uniqueId)",
      data-value="endpoint.operation['x-tribestream-api-registry']['response-parameters']")
    h3 Response Body
    div(data-tribe-markdown,
      data-on-edit-mode-on="onEditModeOn(uniqueId)",
      data-on-edit-mode-off="onEditModeOff(uniqueId)",
      data-value="endpoint.operation['x-tribestream-api-registry']['example-response']")
    h3 Response Body Error
    div(data-tribe-markdown,
      data-on-edit-mode-on="onEditModeOn(uniqueId)",
      data-on-edit-mode-off="onEditModeOff(uniqueId)",
      data-value="endpoint.operation['x-tribestream-api-registry']['example-error-response']")
